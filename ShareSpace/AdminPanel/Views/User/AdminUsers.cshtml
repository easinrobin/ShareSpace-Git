@model List<ShareSpace.Models.User.User>


<header class="content__title">
    <h1>Users</h1>



</header>

<div class="card">
    <div class="card-body">
        <a href="/User/InsertUser" class="btn btn-light">New Contact</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>FullName</th>
                        <th>UserName</th>
                        <th>UserPassword</th>
                        <th>Mobile</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {

                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.UserName</td>
                            <td>@user.UserPassword</td>
                            <td>@user.Mobile</td>
                            <td>@user.IsActive</td>


                            <td>
                                @Html.ActionLink(" ", "UpdateUser", new { userId = user.UserID }, new { @class = "zmdi zmdi-edit" })
                                <a href="#" data-toggle="modal" data-target="#confirm-delete" class="btn btn-default">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                                <div class="modal fade show" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">

                                            </div>
                                            <div class="modal-body" style="align-self: center;">
                                                Are you sure you want to delete this element?
                                            </div>
                                            <div class="modal-footer" style="align-self: center;">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                @Html.ActionLink("Delete", "DeleteUser", new { userId = user.UserID }, new { @class = "btn btn-danger btn-ok" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

</script>