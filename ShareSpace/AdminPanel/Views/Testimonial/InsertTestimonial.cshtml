@model ShareSpace.Models.Admin.AdminVWModel


<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Testimonial/AdminTestimonials">Testimonials</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Testimonial</li>
    </ol>
</nav>

<header class="content__title">
    <h1>Testimonial</h1>
    <div class="actions">
        <a href="~/Testimonial/AdminTestimonials" class="actions__item zmdi zmdi-view-list zmdi-hc-fw" title="Back to List"></a>
        @if (Model == null)
        {
            <a href="~/Testimonial/InsertTestimonial" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>

        }
        else
        {
            <a href="~/Testimonial/UpdateTestimonial?testimonialId=@Model.Testimonial.TestimonialId" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
        }
    </div>
</header>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("InsertTestimonial", "Testimonial", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.Testimonial.TestimonialId)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Testimonial.Name, new { @class = "card-body__title" })
                @Html.EditorFor(model => model.Testimonial.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Full Name" } })
                @Html.ValidationMessageFor(model => model.Testimonial.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Testimonial.ClientDetails, new { @class = "card-body__title" })
                @Html.EditorFor(model => model.Testimonial.ClientDetails, new { htmlAttributes = new { @class = "form-control", placeholder = "Client Details" } })
                @Html.ValidationMessageFor(model => model.Testimonial.ClientDetails, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Testimonial.ProfileImage, new { @class = "card-body__title" })
                <div class="card">
                    <div class="card-body">
                        <span class="card-body__title">Upload Images:</span>
                        <div class="col-md-10">
                            @*<input type="file" name="files" id="file" class="btn btn-success" />*@
                            @Html.TextBoxFor(model => model.Files, new { type = "file", id = "files" })
                            @Html.ValidationMessageFor(model => model.Files, "", new { @class = "validation-text" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Testimonial.Message, new { @class = "card-body__title" })
                @Html.EditorFor(model => model.Testimonial.Message, new { htmlAttributes = new { @class = "form-control", placeholder = "Message" } })
                @Html.ValidationMessageFor(model => model.Testimonial.Message, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @if (Model == null)
                    {
                        <input type="submit" value="Create" class="btn btn-light" />

                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-light" />

                    }
                </div>
            </div>
        }
    </div>
</div>
