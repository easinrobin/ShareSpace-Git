@model ShareSpace.Models.Testimonial.Testimonial


<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Testimonial/AdminTestimonials">Testimonials</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Testimonial</li>
    </ol>
</nav>

<header class="content__title">
    <h1>Testimonial</h1>
    <div class="actions">
        <a href="~/Testimonial/AdminTestimonials" class="actions__item zmdi zmdi-view-list zmdi-hc-fw" title="Back to List"></a>
        @if (Model == null)
        {
            <a href="~/Testimonial/InsertTestimonial" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>

        }
        else
        {
            <a href="~/Testimonial/UpdateTestimonial?testimonialId=@Model.TestimonialId" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>

        }
    </div>
</header>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("InsertTestimonial", "Testimonial", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.TestimonialId)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "card-body__title" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Full Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ClientDetails, new { @class = "card-body__title" })
                @Html.EditorFor(model => model.ClientDetails, new { htmlAttributes = new { @class = "form-control", placeholder = "Client Details" } })
                @Html.ValidationMessageFor(model => model.ClientDetails, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProfileImage, new { @class = "card-body__title" })
                <div class="card">
                    <div class="card-body">
                        <span class="card-body__title">Upload Images:</span>
                        <div class="col-md-10">
                            <input type="file" name="files" id="file" class="btn btn-success" />
                            @Html.ValidationMessageFor(model => model.ProfileImage, "", new { @class = "validation-text" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Message, new { @class = "card-body__title" })
                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", placeholder = "Message" } })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @if (Model == null)
                    {
                        <input type="submit" value="Create" class="btn btn-light" />

                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-light" />

                    }
                </div>
            </div>
        }
    </div>
</div>
