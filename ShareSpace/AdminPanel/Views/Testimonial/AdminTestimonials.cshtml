@model List<ShareSpace.Models.Testimonial.Testimonial>


<header class="content__title">
    <h1>Testimonial</h1>



</header>

<div class="card">
    <div class="card-body">
        <a href="/Testimonial/InsertTestimonial" class="btn btn-light">New Contact</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Name</th>
                        <th>ClientDetails</th>
                        <th>ProfileImage</th>
                        <th>Message</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var testimonial in Model)
                    {

                        <tr>
                            <td>@testimonial.Name</td>
                            <td>@testimonial.ClientDetails</td>
                            <td>@testimonial.ProfileImage</td>
                            <td>@testimonial.Message</td>
                            <td>
                                @if (@testimonial.IsActive == 0)
                                {
                                    <p>Yes</p>
                                }
                                else
                                {
                                    <p>No</p>
                                }
                            </td>
                            
                            <td>
                                @Html.ActionLink(" ", "UpdateTestimonial", new { TestimonialId = testimonial.TestimonialId }, new { @class = "zmdi zmdi-edit" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "DeleteTestimonial", new { TestimonialId = testimonial.TestimonialId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this item?')" })
                                @*<a href="#" data-toggle="modal" data-target="#confirm-delete" class="btn btn-default">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <div class="modal fade show" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                </div>
                                                <div class="modal-body" style="align-self: center;">
                                                    Are you sure you want to delete this element?
                                                </div>
                                                <div class="modal-footer" style="align-self: center;">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                    @Html.ActionLink("Delete", "DeleteTestimonial", new { TestimonialId = testimonial.TestimonialId }, new { @class = "btn btn-danger btn-ok" })

                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
