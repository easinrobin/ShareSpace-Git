@model List<ShareSpace.Models.Booking>


    <header class="content__title">
        <h1>BookingS</h1>

        <div class="actions">
            <div class="dropdown actions__item">
                <i data-toggle="dropdown" class="zmdi zmdi-more-vert"></i>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="#" class="dropdown-item">Refresh</a>
                </div>
            </div>
        </div>

    </header>

    <div class="card">
        <div class="card-body">
            <a href="/Booking/InsertBooking" class="btn btn-light">New Contact</a>
            <Style>
                .table td {
                    color: #ccb68ad9;
                }

                .table td a {
                    color: #ccb68ad9;
                }
            </Style>
           
            <div class="table-responsive">
                <table id="data-table" class="table">
                    <thead style="color: #ffaa00"> 
                        <tr>
                            <th>FromDate</th>
                            <th>ToDate</th>
                            <th>MaximumPerson</th>
                            <th>FromHour</th>
                            <th>ToHour</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                <tbody>
                @foreach (var booking in Model)
                {
                    
                        <tr>
                            <td>@booking.FromDate</td>
                            <td>@booking.ToDate</td>
                            <td>@booking.MaximumPerson</td>
                            <td>@booking.FromHour</td>
                            <td>@booking.ToHour</td>
                            <td>
                                @Html.ActionLink(" ", "UpdateBooking", new { bookingId = booking.BookingId }, new{ @class = "zmdi zmdi-edit" })
                                <a href="#" data-toggle="modal" data-target="#confirm-delete" class="btn btn-default">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                                <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            </div>
                                            <div class="modal-body" style="align-self: center;">
                                                Are you sure you want to delete this element?
                                            </div>
                                            <div class="modal-footer" style="align-self: center;">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                @Html.ActionLink("Delete", "DeleteBooking", new { bookingId = booking.BookingId },new { @class = "btn btn-danger"})


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    
                }
                </tbody>
                </table>
            </div>
        </div>
    </div>

