@model AdminPanel.Models.AdminVWModel
@{
    ViewBag.Title = "Add Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/View/PropertyDetails/Index">Properties</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Property</li>
    </ol>
</nav>


<header class="content__title">
    <h1>Property</h1>

    <div class="actions">
        <a href="/Admin/PropertyDetails/Index" class="actions__item zmdi zmdi-view-list zmdi-hc-fw" title="Back to List"></a>
        <a href="/Admin/PropertyDetails/Create" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>



<div class="card">
    <div class="card-body">
        <h4 class="card-title"></h4>
        <h6 class="card-subtitle"></h6>

        <div class="tab-container">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#property" role="tab">Property</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#address" role="tab">Address</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#feature" role="tab">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#gallery" role="tab">Galleries</a>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#policy" role="tab">Policies</a>
                    </li>*@
            </ul>

            @using (Html.BeginForm("Create", "PropertyDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="tab-content">
                    <div class="tab-pane active fade show" id="property" role="tabpanel">
                        Property
                        <br />
                        <br />
                        @Html.Partial("~/Views/PropertyDetails/Partial/_Property.cshtml", Model)
                    </div>
                    <div class="tab-pane fade" id="address" role="tabpanel">
                        Address
                        <br />
                        <br />
                        @Html.Partial("~/Views/PropertyDetails/Partial/_Address.cshtml", Model)
                    </div>
                    <div class="tab-pane fade" id="feature" role="tabpanel">
                        feature
                        <br />
                        <br />
                        @Html.Partial("~/Views/PropertyDetails/Partial/_FacilityList.cshtml", Model)
                    </div>
                    <div class="tab-pane fade" id="gallery" role="tabpanel">
                        gallery
                        <br />
                        <br />
                        @Html.Partial("~/Views/PropertyDetails/Partial/_Gallery.cshtml", Model)
                    </div>
                    @*<div class="tab-pane fade" id="policy" role="tabpanel">
                            @Html.Partial("~/Areas/Admin/Views/PropertyDetails/Partial/_Policy.cshtml", Model)
                        </div>*@
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>