@model List<ShareSpace.Models.Property>
@{
    ViewBag.Title = "Properties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>Properties</h1>

    <div class="actions">
        <a href="/Admin/PropertyDetails/Create" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="/Admin/PropertyDetails/Index" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <a href="~/Views/PropertyDetails/Create" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>
        </h4>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead>
                    <tr>
                        <th>PropertyName</th>
                        <th>PropertyType</th>
                        <th>MaximumPerson</th>
                        <th>Rent/Hour</th>
                        <th>FeatureImage</th>
                        <th>ShortDescription</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var property in Model)
                {
                    <tbody>
                        <tr>
                            <td>@property.PropertyName</td>
                            <td>@property.MaximumPerson</td>
                            <td>@property.Price</td>
                            <td>@property.PropertyService</td>
                            <td>@property.PropertyAddress</td>
                            <td>@property.FeatureImage</td>
                            @*
                                <td><img src="@property.Image" alt="Image" class="img-responsive" /></td>*@
                            <td>
                                @*@Html.ActionLink(" ", "UpdateProperty", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-edit" })
