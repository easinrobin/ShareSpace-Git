@model ShareSpace.Models.Admin.AdminVWModel
<link href="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.css" rel="stylesheet" type="text/css" />
<script src="https://code.jquery.com/jquery-2.1.4.js"></script>
<script src="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.js"></script>
@{
    ViewBag.Title = "Work Days";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var propertyId = ViewBag.PropertyId;
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Property/Index">Properties</a></li>
        <li class="breadcrumb-item active" aria-current="page">Work Days</li>
    </ol>
</nav>
<header class="content__title">
    <h1>Working Days</h1>

    <div class="actions">
        <a href="/Property/WorkDaysList?propertyId=@propertyId" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <a href="/Property/CreateWorkDays?propertyId=@propertyId" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Add New</a>
        </h4>
        @using (Html.BeginForm("UpdateWorkDays", "Property", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.WorkingDays.PropertyId)
            @Html.HiddenFor(model => model.WorkingDays.Id)
            <div class="listview">
                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Sat, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Sat)
                        </div>
                    </div>
                </div>

                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Sun, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Sun)
                        </div>
                    </div>
                </div>

                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Mon, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Mon)
                        </div>
                    </div>
                </div>

                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Tue, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Tue)
                        </div>
                    </div>
                </div>

                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Wed, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Wed)
                        </div>
                    </div>
                </div>

                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Thu, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Thu)
                        </div>
                    </div>
                </div>

                <div class="listview__item col-md-6">
                    <label class="custom-control custom-checkbox align-self-start">
                        @*@Html.HiddenFor(x => Model.WorkingDays.Sat)*@
                        @Html.CheckBoxFor(x => x.WorkingDays.Fri, new { @class = "custom-control-input" })

                        <span class="custom-control-indicator"></span>
                    </label>

                    <div class="listview__content">
                        <div class="listview__heading">
                            @Html.LabelFor(model => model.WorkingDays.Fri)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6" id="rangestart">
                    @Html.LabelFor(model => model.WorkingDays.StartTime, new { @class = "card-body__title" })
                    @Html.TextBoxFor(model => model.WorkingDays.StartTime, new { @class = "form-control", placeHolder = "Start Time" })
                </div>

                <div class="form-group col-md-6" id="rangeend">
                    @Html.LabelFor(model => model.WorkingDays.EndTime, new { @class = "card-body__title" })
                    @Html.TextBoxFor(model => model.WorkingDays.EndTime, new { @class = "form-control", placeHolder = "End Time" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-light" value="Update" />
            </div>
        }

    </div>
</div>

<script>
    $('#rangestart').calendar({
        type: 'time',
        endCalendar: $('#rangeend')
    });
    $('#rangeend').calendar({
        type: 'time',
        startCalendar: $('#rangestart')
    });
</script>