@model List<ShareSpace.Models.Property.Property>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="content__title">
    <h1>Properties</h1>

    <div class="actions">
        <a href="~/PropertyDetails/Create" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/PropertyDetails/Index" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
