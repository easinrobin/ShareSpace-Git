@model ShareSpace.Models.Admin.AdminVWModel
@{
    ViewBag.Title = "GalleryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var propertyId = ViewBag.PropertyId;
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin/PropertyDetails/Index">Properties</a></li>
        <li class="breadcrumb-item active" aria-current="page">Galleries</li>
    </ol>
</nav>
<header class="content__title">
    <h1>Gallery</h1>

    <div class="actions">
        <a href="/Admin/PropertyDetails/CreateGallery/@propertyId" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="/Admin/PropertyDetails/GalleryList/@propertyId" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <a href="/Admin/PropertyDetails/CreateGallery/@propertyId" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Add New</a>
        </h4>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Alt
                        </th>
                        <th>
                            Image
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img src="@Model.Gallery.ImageUrl" width="50" height="50" />
                        </td>
                        <td>
                            <img src="@Model.Gallery.Image1" width="50" height="50" />
                        </td>
                        <td>
                            <img src="@Model.Gallery.Image2" width="50" height="50" />
                        </td>
                        <td>
                            @*<a href="/Admin/PropertyDetails/EditGallery/@item.Id" title="Edit"><span class="actions__item zmdi zmdi-edit zmdi-hc-fw"></span></a>|*@
                            <a href="/Admin/PropertyDetails/DeleteGallery/@Model.Gallery.GalleryId" onclick="return confirm('Are you sure you want to delete this item?')" title="Delete"><i class="actions__item zmdi zmdi-delete zmdi-hc-fw"></i></a>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
