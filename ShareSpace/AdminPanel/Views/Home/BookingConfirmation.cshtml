}

<div class="card">
	<div class="card-body">

		<div class="table-responsive">
			<table id="" class="table">
				<thead>
					<tr>
						<th>Client Name</th>
						<th>Property Name</th>
						<th>Vendor Name</th>
						<th>Vendor ID</th>
						<th>Location</th>
						<th>Rent/Hour</th>
