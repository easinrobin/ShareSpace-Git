@model List<ShareSpace.Models.Property.AdminPropertyList>
@{
    ViewBag.Title = "ShareSpace Admin";
}
<div class="content__inner">
    <div class="card">
        <div class="card-body text-center">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-3">Dashboard</h1>
                    <p class="lead">Welcome to Admin Dashboard.</p>
                    <p class="lead">Please navigate through the side panel on the left.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <span>Pending Properties for Approval</span>
        </h4>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead>
                    <tr>
                        <th>Vendor Name</th>
                        <th>Property Name</th>
                        <th>Feature Image</th>
                        <th>Rent/ Hour</th>
                        <th>Address</th>
                        <th>Maximum Person</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var property in Model)
                {
                    <tbody>
                        <tr>
                            <td>@property.FirstName @property.LastName</td>
                            <td>@property.PropertyName</td>
                            <td>
                                <img src="@property.FeatureImage" alt="@property.PropertyName" height="100" width="100" />
                            </td>
                            <td>@property.RetailPrice.ToString("0.00")</td>
                            <td>House# @property.HouseNo,Flat# @property.FlatNo,Road# @property.RoadNo, @property.Area, @property.City</td>
                            <td>@property.MaximumPerson</td>
                            <td>
                                @Html.ActionLink(" ", "ApproveProperty", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-assignment-check", onclick = "return confirm('Are you sure you want to approve this property?')" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "HideProperty", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>
