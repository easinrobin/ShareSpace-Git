@model List<ShareSpace.Models.NewsLetter.NewsLetter>


<header class="content__title">
    <h1>NewsLetter</h1>
    <div class="actions">
        <a href="~/NewsLetter/AdminNewsLetters" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        @*<a href="~/Testimonial/AdminTestimonials" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>*@
    </div>
</header>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>NewsLetter</th>
                        <th>CreatedDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var newsletter in Model)
                    {

                        <tr>
                            <td>@newsletter.Email</td>
                            <td>@newsletter.CreatedDate</td>
                            <td>
                                @Html.ActionLink(" ", "DeleteNewsLetter", new { NewsLetterId = newsletter.NewsLetterId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this item?')" })
                                @*<a href="#" data-toggle="modal" data-target="#confirm-delete" class="btn btn-default">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <div class="modal fade show" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                </div>
                                                <div class="modal-body" style="align-self: center;">
                                                    Are you sure you want to delete this element?
                                                </div>
                                                <div class="modal-footer" style="align-self: center;">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                    @Html.ActionLink("Delete", "DeleteNewsLetter", new { NewsLetterId = newsletter.NewsLetterId }, new { @class = "btn btn-danger btn-ok" })

                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>