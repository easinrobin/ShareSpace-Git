@model List<ShareSpace.Models.Vendor.Vendor>


<header class="content__title">
    <h1>VENDORS</h1>
    
    <div class="actions">
        <a href="~/Vendor/InsertVendor" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Vendor/AdminVendors" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>

</header>

<div class="card">
    <div class="card-body">
        <a href="~/Vendor/InsertVendor" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>MobileNo</th>
                        <th>Photo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vendor in Model)
                    {
                        <tr>
                            <td>@vendor.FirstName @vendor.LastName</td>
                            <td>@vendor.Email</td>
                            <td>@vendor.Country</td>
                            <td>@vendor.MobileNo</td>
                            <td>
                                <img src="@vendor.VendorPhoto" width="50" height="50" alt="@vendor.FirstName @vendor.LastName"/>
                            </td>
                            <td>
                                @Html.ActionLink(" ", "UpdateVendor", new { vendorId = vendor.VendorId }, new { @class = "zmdi zmdi-edit" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "HideVendor", new { vendorId = vendor.VendorId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this Vendor? All of the Properties associated with this Vendor will also be deleted.')" })
                                @*<a href="#" data-toggle="modal" data-target="#confirm-delete" class="btn btn-default">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                                <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">

                                            </div>
                                            <div class="modal-body" style="align-self: center;">
                                                Are you sure you want to delete this element?
                                            </div>
                                            <div class="modal-footer" style="align-self: center;">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                @Html.ActionLink("Delete", "DeleteVendor", new { vendorId = vendor.VendorId }, new { @class = "btn btn-danger btn-ok" })

                                            </div>
                                        </div>
                                    </div>
                                </div>*@
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>