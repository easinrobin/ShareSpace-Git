@model List<ShareSpace.Models.Client.Client>


<header class="content__title">
    <h1>CLIENTS</h1>
    <div class="actions">
        <a href="~/Client/InsertClient" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Client/AdminClients" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <a href="~/Client/InsertClient" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>MobileNo</th>
                        <th>Photo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        var imagepath = "http://adminss.thebyteheart.com/" + client.ClientPhoto;
                        <tr>
                            <td>@client.FirstName @client.LastName</td>
                            <td>@client.Email</td>
                            <td>@client.Country</td>
                            <td>@client.MobileNo</td>
                            <td>
                                <img src="@imagepath" width="50" height="50" alt="@client.FirstName @client.LastName"/>
                            </td>
                            <td>
                                @Html.ActionLink(" ", "UpdateClient", new { clientId = client.ClientId }, new { @class = "zmdi zmdi-edit" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "HideClient", new { clientId = client.ClientId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
