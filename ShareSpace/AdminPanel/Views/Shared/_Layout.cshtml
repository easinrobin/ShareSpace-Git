<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/material-font")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/animate-min")
    @Styles.Render("~/Content/jquery-scrollbar")
    @Styles.Render("~/Content/app-min")
    @Styles.Render("~/Content/demo-css")
    @Styles.Render("~/Content/dropzone")
    @Styles.Render("~/Content/fullcalendar")
    @Styles.Render("~/Content/select")
    @Styles.Render("~/Content/sweetAlert2")
    @Styles.Render("~/fonts/flatIcon")
    @Styles.Render("~/Content/flatpickr")
    @Styles.Render("~/Content/rich-text-1")
    @Styles.Render("~/Content/rich-text-2")


</head>
<body data-sa-theme="1">
    <main class="main">
        <div class="page-loader">
            <div class="page-loader__spinner">
                <svg viewBox="25 25 50 50">
                    <circle cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
                </svg>
            </div>
        </div>

        <header class="header">
            <div class="navigation-trigger hidden-xl-up" data-sa-action="aside-open" data-sa-target=".sidebar">
                <i class="zmdi zmdi-menu"></i>
            </div>

            <div class="logo hidden-sm-down">
                <h1><a href="~/Home/Index">Share Space</a></h1>
            </div>

            <ul class="top-nav">
                <li class="hidden-xl-up"><a href="#" data-sa-action="search-open"><i class="zmdi zmdi-search"></i></a></li>
            </ul>

            <div class="clock hidden-md-down">
                <div class="time">
                    <span class="time__hours"></span>
                    <span class="time__min"></span>
                    <span class="time__sec"></span>
                </div>
            </div>
        </header>

        <aside class="sidebar">
            <div class="scrollbar-inner">

                <div class="user">
                    <div class="user__info" data-toggle="dropdown">
                        <img class="user__img" src="/img/profile-pics/8.jpg" alt="">
                        <div>
                            @if (Session["UserName"] != null && Session["Name"] != null)
                            {
                                <div class="user__name">@Session["Name"].ToString()</div>
                                <div class="user__email">@Session["UserName"].ToString()</div>
                            }
                            else
                            {
                                Response.Redirect("~/Auth/Login");
                            }
                        </div>
                    </div>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">View Profile</a>
                        <a class="dropdown-item" href="#">Settings</a>
                        <a class="dropdown-item" href="#">Logout</a>
                    </div>
                </div>

                <ul class="navigation">
                    <li><a href="/Home/Index"><i class="zmdi zmdi-view-dashboard"></i>Dashboard</a></li>

                    <li><a href="/Vendor/AdminVendors"><i class="zmdi zmdi-accounts-list"></i>Vendors</a></li>

                    <li><a href="/Client/AdminClients"><i class="zmdi zmdi-accounts"></i>Clients</a></li>

                    <li><a href="/Property/Index"><i class="zmdi zmdi-city"></i>Properties</a></li>

                    <li><a href="/Booking/AdminBookings"><i class="zmdi zmdi-book"></i>Booking</a></li>

                    @*<li><a href="/Transaction/AdminTransactions"><i class="zmdi zmdi-money-box"></i>Transactions</a></li>*@

                    <li><a href="/Testimonial/AdminTestimonials"><i class="zmdi zmdi-comments"></i>Testimonial</a></li>

                    <li><a href="/NewsLetter/AdminNewsLetters"><i class="zmdi zmdi-email"></i>Newsletter</a></li>

                    <li><a href="/User/AdminUsers"><i class="zmdi zmdi-account"></i>Users</a></li>
                </ul>
            </div>
        </aside>

        <section class="content">

            @RenderBody()
            <footer class="footer hidden-xs-down">
                <p>&copy; @DateTime.Now.Year <a href="http://byteheart.com/" target="_blank">ByteHeart</a>. Trademarks and brands are the property of their respective owners.</p>
            </footer>
        </section>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery.validate.unobtrusive")
    @Scripts.Render("~/bundles/poppermin")
    @Scripts.Render("~/bundles/bootstrapmin")
    @Scripts.Render("~/bundles/jqueryscrollbarmin")
    @Scripts.Render("~/bundles/jqueryscrollLockmin")

    @Scripts.Render("~/bundles/jquerydataTablesmin")
    @Scripts.Render("~/bundles/dataTablesbuttonsmin")
    @Scripts.Render("~/bundles/buttonsprintmin")
    @Scripts.Render("~/bundles/jszipmin")
    @Scripts.Render("~/bundles/buttonshtml5min")
    @Scripts.Render("~/bundles/appmin")
    @*@Scripts.Render("~/bundles/curvedline")*@
    @Scripts.Render("~/bundles/autosize")
    @Scripts.Render("~/bundles/dropzone")
    @Scripts.Render("~/bundles/momentJs")
    @Scripts.Render("~/bundles/flatpickr")
    @*@Scripts.Render("~/bundles/fullcalendar")*@
    @Scripts.Render("~/bundles/easypiechart")
    @Scripts.Render("~/bundles/flot")
    @Scripts.Render("~/bundles/flotResize")
    @Scripts.Render("~/bundles/peity")
    @Scripts.Render("~/bundles/lightgallery")
    @Scripts.Render("~/bundles/salvattore")
    @Scripts.Render("~/bundles/select")
    @Scripts.Render("~/bundles/sweetAlert2")


    @Scripts.Render("~/bundles/rich-textJs-1")
    @Scripts.Render("~/bundles/rich-textJs-2")
    

    <script>
        $(document).ready(function () {
            $('a[data-confirm]').click(function (ev) {
                var href = $(this).attr('href');

                if (!$('#dataConfirmModal').length) {
                    $('body').append('<div id="dataConfirmModal" class="modal" role="dialog" aria-labelledby="dataConfirmLabel" aria-hidden="true"><div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button><h3 id="dataConfirmLabel">Please Confirm</h3></div><div class="modal-body"></div><div class="modal-footer"><button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button><a class="btn btn-primary" id="dataConfirmOK">OK</a></div></div>');
                }
                $('#dataConfirmModal').find('.modal-body').text($(this).attr('data-confirm'));
                $('#dataConfirmOK').attr('href', href);
                $('#dataConfirmModal').modal({
                    show: true
                });
                return false;
            });
        });

        $('#confirm-delete').on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });

        $('#wysiwyg-editor').trumbowyg();

    </script>

    @RenderSection("scripts", false)

</body>
</html>