@model List<ShareSpace.Models.Transaction.Transaction>


<header class="content__title">
    <h1>TRANSACTIONS</h1>
    <div class="actions">
        <a href="~/Transaction/InsertTransaction" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Transaction/AdminTransactions" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <a href="~/Transaction/InsertTransaction" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>TotalPrice</th>
                        <th>VendorId</th>
                        <th>PropertyId</th>
                        <th>PropertyRatingId</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@transaction.TotalPrice</td>
                            <td>@transaction.VendorId</td>
                            <td>@transaction.PropertyId</td>
                            <td>@transaction.PropertyRatingId</td>
                            <td>
                                @Html.ActionLink(" ", "UpdateTransaction", new { transactionId = transaction.TransactionId }, new { @class = "zmdi zmdi-edit" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "DeleteTransaction", new { transactionId = transaction.TransactionId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this item?')" })
                                @*<a href="#" data-toggle="modal" data-target="#confirm-delete" class="btn btn-default">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                </div>
                                                <div class="modal-body" style="align-self: center;">
                                                    Are you sure you want to delete this element?
                                                </div>
                                                <div class="modal-footer" style="align-self: center;">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                    @Html.ActionLink("Delete", "DeleteTransaction", new { transactionId = transaction.TransactionId }, new { @class = "btn btn-danger btn-ok" })

                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
