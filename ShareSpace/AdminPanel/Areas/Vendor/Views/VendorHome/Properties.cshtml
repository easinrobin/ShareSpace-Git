@model List<ShareSpace.Models.Property.Property>
@{
    ViewBag.Title = "Properties";
    Layout = "~/Areas/Vendor/Views/Shared/_VendorLayout.cshtml";
}

<header class="content__title">
    <h1>Properties</h1>

    <div class="actions">
        <a href="~/Vendor/VendorHome/Create" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Vendor/VendorHome/Properties" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <a href="~/Vendor/VendorHome/Create" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>
        </h4>
        <div class="table-responsive">
            <table @*id="data-table"*@ class="table">
                <thead>
                    <tr>
                        <th>Property Name</th>
                        <th>Feature Image</th>
                        <th>Rent/Hour</th>
                        @*<th>Address</th>*@
                        <th>Maximum Person</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var property in Model)
                {
                    <tbody>
                        <tr>
                            <td>@property.PropertyName</td>
                            <td>@property.FeatureImage</td>
                            <td>@property.Price.ToString("0.00")</td>
                            @*<td>House# @property.HouseNo,Flat# @property.FlatNo,Road# @property.RoadNo, @property.Area, @property.City</td>*@
                            <td>@property.MaximumPerson</td>
                            <td>
                                @Html.ActionLink(" ", "UpdateProperty", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-edit" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "GalleryList", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-image-o" })<br />
                                @Html.ActionLink(" ", "ServiceList", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-assignment" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "HideProperty", new { propertyId = property.PropertyId }, new { @class = "zmdi zmdi-delete", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>
