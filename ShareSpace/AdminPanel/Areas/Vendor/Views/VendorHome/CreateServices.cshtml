@model ShareSpace.Models.Admin.AdminVWModel
@{
    ViewBag.Title = "Create Services";
    Layout = "~/Areas/Vendor/Views/Shared/_VendorLayout.cshtml";
}
@{
    var propertyId = ViewBag.PropertyId;
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Property/Index">Properties</a></li>
        <li class="breadcrumb-item"><a href="/Property/GalleryList?propertyId=@Model.PropertyService.PropertyId">Galleries</a></li>
        <li class="breadcrumb-item active" aria-current="page">Services</li>
    </ol>
</nav>
<header class="content__title">
    <h1>Add Service</h1>

</header>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("CreateServices", "VendorHome", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.PropertyService.PropertyId)
            <h4 class="card-title">Services</h4>
            <h6 class="card-subtitle">Add Your Service Item.</h6>
            <div class="form-horizontal">
                <div class="row">
                    <div class="listview">
                        @for (int idx = 0; idx < Model.ServiceList.Count; idx++)
                        {
                            <div class="listview__item float-right col-sm-6">
                                <label class="custom-control custom-checkbox align-self-start">
                                    @Html.HiddenFor(x => Model.ServiceList[idx].ServiceId)
                                    @Html.CheckBoxFor(x => x.ServiceList[idx].IsSelected, new { @class = "custom-control-input" })
                                    
                                    <span class="custom-control-indicator"></span>
                                </label>
                                <i class="@Model.ServiceList[idx].ImagePath"></i>

                                <div class="listview__content">
                                    <div class="listview__heading">&nbsp;&nbsp;@Model.ServiceList[idx].ServiceName</div>
                                </div>
                            </div>
                            @*<div class="listview__item float-right col-sm-6">
                                <label class="custom-control custom-control--char">
                                    @Html.HiddenFor(x => Model.ServiceList[idx].ServiceId)
                                    @Html.CheckBoxFor(x => x.ServiceList[idx].IsSelected, new { @class = "custom-control-input" })
                                    
                                    <span class="custom-control--char__helper"><i class="@Model.ServiceList[idx].ImagePath"></i></span>
                                    <span class="custom-control-description">@Model.ServiceList[idx].ServiceName</span>
                                </label>
                            </div>*@
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        }
    </div>
</div>
