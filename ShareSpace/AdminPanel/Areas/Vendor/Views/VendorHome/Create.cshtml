@model ShareSpace.Models.Admin.AdminVWModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Vendor/Views/Shared/_VendorLayout.cshtml";
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Property/Index">Properties</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Property</li>
    </ol>
</nav>


<header class="content__title">
    <h1>Property</h1>
    <div class="actions">
        <a href="~/Vendor/VendorHome/Properties" class="actions__item zmdi zmdi-view-list zmdi-hc-fw" title="Back to List"></a>
        <a href="~/Vendor/VendorHome/Create" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">

        <div class="tab-container">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#property" role="tab">Property</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#address" role="tab">Address</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#feature" role="tab">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#gallery" role="tab">Gallery</a>
                </li>
            </ul>

            @using (Html.BeginForm("Create", "VendorHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="tab-content">
                    <div class="tab-pane active fade show" id="property" role="tabpanel">
                        @Html.Partial("~/Areas/Vendor/Views/VendorHome/Partial/_Property.cshtml", Model)
                    </div>
                    <div class="tab-pane" id="address" role="tabpanel">
                        @Html.Partial("~/Areas/Vendor/Views/VendorHome/Partial/_Address.cshtml", Model)
                    </div>
                    <div class="tab-pane " id="feature" role="tabpanel">
                        @Html.Partial("~/Areas/Vendor/Views/VendorHome/Partial/_ServiceList.cshtml", Model)
                    </div>
                    <div class="tab-pane " id="gallery" role="tabpanel">
                        @Html.Partial("~/Areas/Vendor/Views/VendorHome/Partial/_Gallery.cshtml", Model)
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>
