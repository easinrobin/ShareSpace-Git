@model ShareSpace.Models.Admin.AdminVWModel
@{
    ViewBag.Title = "Service List";
    Layout = "~/Areas/VendorPanel/Views/Shared/_VendorHomeLayout.cshtml";
}
@{
    var propertyId = ViewBag.PropertyId;
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Vendor/VendorHome/Properties">Properties</a></li>
        <li class="breadcrumb-item active" aria-current="page">Service List</li>
    </ol>
</nav>
<header class="content__title">
    <h1>Service List</h1>

    <div class="actions">
        <a href="/Vendor/VendorHome/CreateServices?propertyId=@propertyId" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="/Vendor/VendorHome/ServiceList?propertyId=@propertyId" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <a href="/Vendor/VendorHome/CreateServices?propertyId=@propertyId" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Add New</a>
        </h4>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PropertyServiceVwModel.ToList())
                    {
                        <tr>
                            <td>
                                <i class="@item.ImagePath"></i>&nbsp;&nbsp; @item.ServiceName
                            </td>
                            <td>
                                @Html.ActionLink(" ", "DeletePropertyServiceItem", new { @item.PropertyServiceId }, new { @class = "actions__item zmdi zmdi-delete zmdi-hc-fw", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
