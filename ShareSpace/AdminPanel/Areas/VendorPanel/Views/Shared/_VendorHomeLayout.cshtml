<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/material-font")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/animate-min")
    @Styles.Render("~/Content/jquery-scrollbar")
    @Styles.Render("~/Content/dropzone")
    @Styles.Render("~/Content/fullcalendar")
    @Styles.Render("~/Content/select")
    @Styles.Render("~/Content/sweetAlert2")
    @Styles.Render("~/fonts/flatIcon")
    @Styles.Render("~/Content/app-min")
    @Styles.Render("~/Content/demo-css")

    @Styles.Render("~/Content/rich-text-1")
    @Styles.Render("~/Content/rich-text-2")

</head>
<body data-sa-theme="1">
    <main class="main">
        <div class="page-loader">
            <div class="page-loader__spinner">
                <svg viewBox="25 25 50 50">
                    <circle cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
                </svg>
            </div>
        </div>
        <header class="header">
            <div class="navigation-trigger hidden-xl-up" data-sa-action="aside-open" data-sa-target=".sidebar">
                <i class="zmdi zmdi-menu"></i>
            </div>

            <div class="logo hidden-sm-down">
                <h1><a href="/VendorPanel/VendorHome/Index">Share Space</a></h1>
            </div>

            <ul class="top-nav">
                <li class="hidden-xl-up"></li>
            </ul>

            <div class="clock hidden-md-down">
                <div class="time">
                    <span class="time__hours"></span>
                    <span class="time__min"></span>
                    <span class="time__sec"></span>
                </div>
            </div>
        </header>

        <aside class="sidebar">
            <div class="scrollbar-inner">

                <div class="user">
                    <div class="user__info" data-toggle="dropdown">
                        <img class="user__img" src="@Session["VendorPhoto"]" alt="">
                        <div>
                            @if (Session["UserName"] != null && Session["Name"] != null)
                            {
                                <div class="user__name">@Session["Name"].ToString()</div>
                                <div class="user__email">@Session["UserName"].ToString()</div>
                            }
                            else
                            {
                                Response.Redirect("~/Auth/Login");
                            }
                        </div>
                    </div>

                    @*<div class="dropdown-menu">
                        <a class="dropdown-item" href="#">View Profile</a>
                        <a class="dropdown-item" href="#">Settings</a>
                        <a class="dropdown-item" href="#">Logout</a>
                    </div>*@
                </div>

                <ul class="navigation">
                    <li><a href="/VendorPanel/VendorHome/Index"><i class="zmdi zmdi-view-dashboard"></i>Dashboard</a></li>

                    <li><a href="/VendorPanel/VendorHome/Profile"><i class="zmdi zmdi-account"></i>Profile</a></li>

                    <li><a href="/VendorPanel/VendorHome/Properties"><i class="zmdi zmdi-city"></i>Properties</a></li>

                    <li><a href="/VendorHome/Logout"><i class="fa fa-sign-out"></i>Logout</a></li>
                </ul>
            </div>
        </aside>

        <section class="content">

            @RenderBody()
            <footer class="footer hidden-xs-down">
                <p>&copy; @DateTime.Now.Year <a href="http://byteheart.com/" target="_blank">ByteHeart</a>. Trademarks and brands are the property of their respective owners.</p>
            </footer>
        </section>
    </main>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery.validate.unobtrusive")
    @Scripts.Render("~/bundles/bootstrapmin")
    @Scripts.Render("~/bundles/appmin")
    @Scripts.Render("~/bundles/poppermin")
    @Scripts.Render("~/bundles/jqueryscrollbarmin")
    @Scripts.Render("~/bundles/jqueryscrollLockmin")
    @Scripts.Render("~/bundles/jquerydataTablesmin")
    @Scripts.Render("~/bundles/dataTablesbuttonsmin")
    @Scripts.Render("~/bundles/buttonsprintmin")
    @Scripts.Render("~/bundles/buttonshtml5min")
    @Scripts.Render("~/bundles/autosize")
    @Scripts.Render("~/bundles/dropzone")
    @Scripts.Render("~/bundles/lightgallery")
    @Scripts.Render("~/bundles/salvattore")
    @Scripts.Render("~/bundles/select")
    @Scripts.Render("~/bundles/sweetAlert2")

    @Scripts.Render("~/bundles/rich-textJs-1")
    @Scripts.Render("~/bundles/rich-textJs-2")


    <script>
        $('#wysiwyg-editor').trumbowyg();
    </script>

    @RenderSection("scripts", false)
</body>
</html>
