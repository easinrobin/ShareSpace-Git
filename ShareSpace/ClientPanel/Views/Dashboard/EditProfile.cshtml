@model ShareSpace.Models.Client.ClientViewModel
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_ClientDashboardLayout.cshtml";
}

<div class="card new-contact">
    @using (Html.BeginForm("EditProfile", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.Client.ClientPhoto)
        var imagepath = "http://adminss.thebyteheart.com/" + Model.Client.ClientPhoto;
        <div class="new-contact__header">

            @Html.TextBoxFor(model => model.Files, new { type = "file", id = "files", @class = "fa fa-camera new-contact__upload" })


            <img src="@imagepath" class="new-contact__img" alt="">
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(model => model.Client.FirstName, new { @class = "form-control", placeholder = "i.e. John" })
                        @Html.ValidationMessageFor(model => model.Client.FirstName, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.TextBoxFor(model => model.Client.LastName, new { @class = "form-control", placeholder = "i.e. Smith" })
                        @Html.ValidationMessageFor(model => model.Client.LastName, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(model => model.Client.Email, new { @class = "form-control", placeholder = "i.e. 01X XXX XXXX", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Client.Email, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mobile</label>
                        @Html.TextBoxFor(model => model.Client.MobileNo, new { @class = "form-control", placeholder = "i.e. 01X XXX XXXX" })
                        @Html.ValidationMessageFor(model => model.Client.MobileNo, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Country</label>
                        @Html.TextBoxFor(model => model.Client.Country, new { @class = "form-control", placeholder = "i.e. 01X XXX XXXX" })
                        @Html.ValidationMessageFor(model => model.Client.Country, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Birthdate</label>
                        @Html.TextBoxFor(model => model.Client.BirthDate, new { @class = "form-control", placeholder = "i.e. 01X XXX XXXX" })
                        @Html.ValidationMessageFor(model => model.Client.BirthDate, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(model => model.Client.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                        @Html.ValidationMessageFor(model => model.Client.Password, "", new { @class = "text-danger" })
                        <i class="form-group__bar"></i>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" placeholder="">
                        <i class="form-group__bar"></i>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="mt-5 text-center">
                <input type="submit" value="Update" class="btn btn-success" />
                <a href="/Dashboard/Index" class="btn btn-light">Back</a>
            </div>
        </div>
    }
</div>