@using System.Web.UI.WebControls
@model ShareSpace.Models.Property.PropertyDetails
@{
    ViewBag.Title = "Office Details";
}

<div class="clear">

</div>

<div class="content-area rooms-details-page">
    <div class="container">

        <div class="row">

            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <!--  Rooms detail slider start -->
                <div class="rooms-detail-slider simple-slider mrg-btm-40 ">
                    <div id="carousel-custom" class="carousel slide" data-ride="carousel">
                        <div class="carousel-outer">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item">
                                    <img src="/img/properties/office-room1.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="/img/properties/office-room3.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="/img/properties/office-room4.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="/img/properties/office-room5.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="/img/properties/office-room1.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="/img/properties/office-room3.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item active">
                                    <img src="/img/properties/office-room4.jpg" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                            </div>
                            <!-- Controls -->
                            <a class="left carousel-control" href="#carousel-custom" role="button" data-slide="prev">
                                <span class="slider-mover-left no-bg" aria-hidden="true">
                                    <i class="fa fa-angle-left"></i>
                                </span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#carousel-custom" role="button" data-slide="next">
                                <span class="slider-mover-right no-bg" aria-hidden="true">
                                    <i class="fa fa-angle-right"></i>
                                </span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- Indicators -->
                        <ol class="carousel-indicators thumbs visible-lg visible-md">
                            <li data-target="#carousel-custom" data-slide-to="0" class="">
                                <img src="/img/properties/office-room1.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="1" class="">
                                <img src="/img/properties/office-room3.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="2" class="">
                                <img src="/img/properties/office-room4.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="3" class="">
                                <img src="/img/properties/office-room5.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="4" class="">
                                <img src="/img/properties/office-room1.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="5" class="">
                                <img src="/img/properties/office-room3.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="6" class="">
                                <img src="/img/properties/office-room4.jpg"
                                     alt="Chevrolet Impala">
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- Rooms detail slider end -->
                <div class="heading-rooms  clearfix sidebar-widget">

                    <div class="pull-left">
                        <h3>@Model.PropertyName</h3>
                        <p>
                            <i class="fa fa-map-marker"></i>@Model.Address, @Model.Area, @Model.City - @Model.ZipCode
                        </p>
                    </div>
                    <div class="pull-right">
                        <h3><span>৳@Model.RetailPrice</span></h3>
                        <h5>/ Hour</h5>
                    </div>

                </div>
                <!-- Rooms details section start -->
                <div class="rooms-detail-slider sidebar-widget">

                    <!-- Search area box 2 start -->
                    <div class="search-area-box-2 hidden-lg hidden-md mrg-btm-30">

                        <div class="search-contents">
                            <form method="GET">
                                <div class="row">
                                    <div class="col-md-3 col-pad col-pad-2">
                                        <div class="search-your-rooms">
                                            <h3 class="hidden-xs hidden-sm">Reserve</h3>
                                            <h2 class="hidden-xs hidden-sm">Your <span>Space</span></h2>
                                            <h2 class="hidden-lg hidden-md">Reserve Your <span>Space</span></h2>
                                        </div>
                                    </div>
                                    <div class="search-your-details">
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <input type="text" class="btn-default" id="smallCheckInDate" placeholder="Check In Date">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <input type="text" class="btn-default" id="smallCheckOutDate" placeholder="Check Out Date">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <input type="text" class="btn-default" id="smallCheckInTime" placeholder="Check In Time">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <input type="text" class="btn-default" id="smallCheckOutTime" placeholder="Check Out Time">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <select class="selectpicker search-fields form-control-2" name="room">
                                                    <option>Office Type</option>
                                                    <option>Shared Office</option>
                                                    <option>Whole Office</option>
                                                    <option>Meeting Space</option>
                                                    <option>Auditorium</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <select class="selectpicker search-fields form-control-2" name="adults">
                                                    <option>Number of Person</option>
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-12 col-sm-12 col-xs-12 col-pad">
                                            <div class="form-group">
                                                <button class="search-button">Book Now</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Search area box 2 end -->

                    <div class="mrg-btm-30">
                        <!-- Title -->
                        <h3>Rooms Description</h3>
                        <!-- paragraph -->
                        <p>
                            @Model.Description
                        </p>
                    </div>

                    <!-- Rooms features start -->
                    <div class="rooms-features mrg-btm-30">
                        <h3>Rooms Features</h3>
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <ul class="condition">
                                    <li>
                                        <i class="flaticon-air-conditioner"></i>Air conditioning
                                    </li>
                                    <li>
                                        <i class="flaticon-balcony-and-door"></i>Balcony
                                    </li>
                                    <li>
                                        <i class="flaticon-weightlifting"></i>Gym
                                    </li>
                                    <li>
                                        <i class="flaticon-parking"></i>Parking
                                    </li>
                                    <li>
                                        <i class="flaticon-sunbed"></i>Beach View
                                    </li>

                                </ul>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <ul class="condition">
                                    <li>
                                        <i class="flaticon-bed"></i>2 Bedroom
                                    </li>
                                    <li>
                                        <i class="flaticon-person-learning-by-reading"></i>Free Newspaper
                                    </li>
                                    <li>
                                        <i class="flaticon-swimming-silhouette"></i>Use of pool
                                    </li>
                                    <li>
                                        <i class="flaticon-monitor"></i>TV
                                    </li>
                                    <li>
                                        <i class="flaticon-no-smoking-sign"></i>No Smoking
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <ul class="condition">
                                    <li>
                                        <i class="flaticon-room-service"></i>Room Service
                                    </li>
                                    <li>
                                        <i class="flaticon-breakfast"></i>Breakfast
                                    </li>
                                    <li>
                                        <i class="flaticon-phone-receiver"></i>Telephone
                                    </li>
                                    <li>
                                        <i class="flaticon-bed"></i>2 Bedroom
                                    </li>
                                    <li>
                                        <i class="flaticon-wifi-connection-signal-symbol"></i>Free Wi-Fi
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Rooms features end -->
                    <!-- Comments section start -->
                    <div class="comments-section mrg-btm-30">
                        <!-- Main Title 2 -->
                        <div class="main-title-2">
                            <h1><span>Office </span> Reviews</h1>
                        </div>

                        <ul class="comments">
                            <li>
                                <div class="comment">
                                    <div class="comment-author">
                                        <a href="#">
                                            <img src="@Model.ClientPhoto" alt="avatar-5">
                                        </a>
                                    </div>
                                    <div class="comment-content">
                                        <div class="comment-meta">
                                            <div class="comment-meta-author">
                                                @Model.FirstName @Model.LastName
                                            </div>

                                            <div class="comment-meta-date">
                                                <span class="hidden-xs">8:42 PM 3/3/2017</span>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                        <div class="comment-body">
                                            <div class="comment-rating">
                                                <div class="rating" data-rateyo-star-width="20px" data-rateyo-rating="@Model.Rating">
                                                </div>
                                            </div>
                                            <p>
                                                @Model.Review
                                            </p>
                                        </div>
                                    </div>
                                </div>

                            </li>
                        </ul>
                    </div>
                    <!-- Comments section end -->
                    <!-- Contact form start -->
                    <div class="contact-form">
                        <form id="contact_form" action="" method="GET" enctype="multipart/form-data">
                            <div class="main-title-2">
                                <h1>Rate this Office</h1>
                                <div id="client-rating" data-rateyo-star-width="20px" data-rateyo-rating="@Model.Rating">
                                </div>
                            </div>
                            <div class="main-title-2">
                                <h1> <span>Leave</span> a Comment</h1>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group fullname">
                                        <input type="text" name="full-name" class="input-text" placeholder="Full Name">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group enter-email">
                                        <input type="email" name="email" class="input-text" placeholder="Enter email">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group message">
                                        <textarea class="input-text" name="message" placeholder="Write message"></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group send-btn">
                                        <button type="submit" class="button-md button-theme">Post Comment</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- Contact form end -->

                </div>
                <!-- Course details section end -->
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <!-- Sidebar start -->
                <div class="sidebar right">
                    <!-- Search area box start -->
                    <div class="search-area-box-6 hidden-xs hidden-sm">
                        <div class="search-contents">
                            <form method="GET" action="../Home/SearchResults">
                                <div class="col-lg-12 col-pad col-pad-2">
                                    <div class="search-your-rooms">
                                        <h3 class="hidden-xs hidden-sm">Reserve Your</h3>
                                        <h2 class="hidden-xs hidden-sm" style="letter-spacing: 2px">Space<span> Now</span></h2>
                                        <h2 class="hidden-lg hidden-md">Search Your <span>Rooms</span></h2>
                                    </div>
                                </div>
                                <div class="search-your-details">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="input-group date" id="checkInDate">
                                                <input type="text" class="btn-default" placeholder="Check In" />
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="input-group date" id="checkOutDate">
                                                <input type="text" class="btn-default" placeholder="Check Out" />
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="input-group date" id="checkInTime">
                                                <input type="text" class="btn-default" placeholder="Check In Time" />
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-time"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="input-group date" id="checkOutTime">
                                                <input type="text" class="btn-default" placeholder="Check Out Time" />
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-time"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <select class="selectpicker search-fields form-control-2" name="room">
                                                <option>Office Type</option>
                                                <option>Shared Office</option>
                                                <option>Whole Office</option>
                                                <option>Meeting Space</option>
                                                <option>Auditorium</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <select class="selectpicker search-fields form-control-2" name="adults">
                                                <option>Number of Person</option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <button class="search-button">@Html.ActionLink("Book", "SearchResults", "Home")</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Search area box end -->
                    <!-- Inside video start  -->
                    <div class="inside-video sidebar-widget">
                        <div class="main-title-2">
                            <h1>Office Video</h1>
                        </div>
                        <iframe src="https://www.youtube.com/embed/5e0LxrLSzok" allowfullscreen=""></iframe>
                    </div>
                    <!-- Inside video end -->
                    <!-- Social media start -->
                    <div class="social-media sidebar-widget clearfix">
                        <!-- Main Title 2 -->
                        <div class="main-title-2">
                            <h1>Social Media</h1>
                        </div>
                        <!-- Social list -->
                        <ul class="social-list">
                            <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#" class="google"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#" class="rss"><i class="fa fa-rss"></i></a></li>
                        </ul>
                    </div>
                    <!-- Social media end -->
                    <!-- Location start  -->
                    <div class="location sidebar-widget">
                        <div class="map">
                            <!-- Main Title 2 -->
                            <div class="main-title-2">
                                <h1>Location</h1>
                            </div>
                            <div id="map" class="contact-map" style="height: 662px; background-color: crimson">
                                <img src="/img/dhaka map.jpg" height="250" width="320" />
                            </div>
                        </div>
                    </div>
                    <!-- Location end -->

                </div>
                <!-- Sidebar end -->
            </div>
        </div>
    </div>
</div>
