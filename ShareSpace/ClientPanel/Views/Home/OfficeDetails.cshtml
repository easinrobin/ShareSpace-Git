@model ShareSpace.Models.Property.PropertyDetails
@{
    ViewBag.Title = "Office Details";
}
@{
    var maploc = Model.Address + "," + Model.Area + "," + Model.City + "," + Model.ZipCode;

    var mapurl = "https://maps.google.com/maps?q=" + @maploc + "&t=&z=13&ie=UTF8&iwloc=&output=embed";
}
<div class="clear">

</div>

<div class="content-area rooms-details-page">
    <div class="container">

        <div class="row">

            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <!--  Rooms detail slider start -->
                <div class="rooms-detail-slider simple-slider mrg-btm-40 ">
                    <div id="carousel-custom" class="carousel slide" data-ride="carousel">
                        <div class="carousel-outer">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item">
                                    <img src="@Model.ImageUrl" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="@Model.Image1" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="@Model.Image2" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="@Model.Image3" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="@Model.Image4" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item">
                                    <img src="@Model.Image5" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                                <div class="item active">
                                    <img src="@Model.Image6" class="thumb-preview" alt="Chevrolet Impala">
                                </div>
                            </div>
                            <!-- Controls -->
                            <a class="left carousel-control" href="#carousel-custom" role="button" data-slide="prev">
                                <span class="slider-mover-left no-bg" aria-hidden="true">
                                    <i class="fa fa-angle-left"></i>
                                </span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#carousel-custom" role="button" data-slide="next">
                                <span class="slider-mover-right no-bg" aria-hidden="true">
                                    <i class="fa fa-angle-right"></i>
                                </span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- Indicators -->
                        <ol class="carousel-indicators thumbs visible-lg visible-md">
                            <li data-target="#carousel-custom" data-slide-to="0" class="">
                                <img src="@Model.ImageUrl"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="1" class="">
                                <img src="@Model.Image1"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="2" class="">
                                <img src="@Model.Image2"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="3" class="">
                                <img src="@Model.Image3"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="4" class="">
                                <img src="@Model.Image4"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="5" class="">
                                <img src="@Model.Image5"
                                     alt="Chevrolet Impala">
                            </li>
                            <li data-target="#carousel-custom" data-slide-to="6" class="">
                                <img src="@Model.Image6"
                                     alt="Chevrolet Impala">
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- Rooms detail slider end -->
                <div class="heading-rooms  clearfix sidebar-widget">

                    <div class="pull-left">
                        <h3>@Model.PropertyName</h3>
                        <p>
                            <i class="fa fa-map-marker"></i>@Model.Address, @Model.Area, @Model.City - @Model.ZipCode
                        </p>
                    </div>
                    <div class="pull-right">
                        <h3><span>৳@Model.RetailPrice.ToString("0.00")</span></h3>
                        <h5>/ Hour</h5>
                    </div>

                </div>
                <!-- Rooms details section start -->
                <div class="rooms-detail-slider sidebar-widget">

                    <!-- Search area box 2 start -->
                    <div class="search-area-box-2 hidden-lg hidden-md mrg-btm-30">

                        <div class="search-contents">
                            @using (Html.BeginForm("OfficeDetails", "Home", FormMethod.Post, new { @class = "validate-form" }))
                            {
                                @Html.HiddenFor(m => m.PropertyName)
                                @Html.HiddenFor(m => m.Address)
                                @Html.HiddenFor(m => m.Area)
                                @Html.HiddenFor(m => m.City)
                                @Html.HiddenFor(m => m.ZipCode)

                                <div class="row">
                                    <div class="col-md-3 col-pad col-pad-2">
                                        <div class="search-your-rooms">
                                            <h3 class="hidden-xs hidden-sm">Reserve</h3>
                                            <h2 class="hidden-xs hidden-sm">Your <span>Space</span></h2>
                                            <h2 class="hidden-lg hidden-md">Reserve Your <span>Space</span></h2>
                                        </div>
                                    </div>
                                    <div class="search-your-details">
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <div class="validate-input" data-validate="Date is required">
                                                    @Html.EditorFor(m => m.BookingEmail.FromDate, new { htmlAttributes = new { @class = "btn-default validate-field", id = string.Format("smallCheckInDate"), type = "text", name = "CheckInDate", placeholder = "Check In Date" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <div class="validate-input" data-validate="Date is required">
                                                    @Html.EditorFor(m => m.BookingEmail.ToDate, new { htmlAttributes = new { @class = "btn-default validate-field", id = string.Format("smallCheckOutDate"), type = "text", name = "CheckOutDate", placeholder = "Check Out Date" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <div class="validate-input" data-validate="Time is required">
                                                    @Html.EditorFor(m => m.BookingEmail.FromHour, new { htmlAttributes = new { @class = "btn-default validate-field", id = string.Format("smallCheckInTime"), type = "text", name = "CheckInTime", placeholder = "Check In Time" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <div class="validate-input" data-validate="Time is required">
                                                    @Html.EditorFor(m => m.BookingEmail.ToHour, new { htmlAttributes = new { @class = "btn-default validate-field", id = string.Format("smallCheckOutTime"), type = "text", name = "CheckOutTime", placeholder = "Check Out Time" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <div class="validate-input" data-validate="Email is required">
                                                    @Html.EditorFor(m => m.BookingEmail.Email, new { htmlAttributes = new { @class = "btn-default validate-field", id = string.Format("email"), type = "email", name = "email", placeholder = "Your Email Address" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                            <div class="form-group">
                                                <div class="validate-input" data-validate="Number of Person is required">
                                                    @Html.DropDownListFor(m => m.BookingEmail.MaximumPerson, new List<SelectListItem>
                                                    {
                                                        new SelectListItem {Text = "1", Value = "1"},
                                                        new SelectListItem {Text = "2", Value = "2"},
                                                        new SelectListItem {Text = "3", Value = "3"},
                                                        new SelectListItem {Text = "4", Value = "4"},
                                                        new SelectListItem {Text = "5", Value = "5"}
                                                    },
                                                        "Number of Person", new
                                                        {@class = "selectpicker search-fields form-control-2", name = "Person"}
                                                        )
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12 col-xs-12 col-pad">
                                            <div class="form-group">
                                                <button type="submit" class="search-button">Book Now</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- Search area box 2 end -->

                    <div class="mrg-btm-30">
                        <!-- Title -->
                        <h3>Office Description</h3>
                        <!-- paragraph -->
                        <p>
                            @Model.Description
                        </p>
                    </div>

                    <!-- Rooms features start -->
                    <div class="rooms-features mrg-btm-30">
                        <h3>Office Amenities</h3>
                        <div class="row">
                            <ul class="condition">
                                @foreach (var services in Model.PropertyServiceOnClient)
                                {
                                    <li class="col-md-4 col-sm-4 col-xs-12">
                                        <i class="@services.ImagePath"></i>@services.ServiceName
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- Rooms features end -->
                    <!-- Comments section start -->
                    <div class="comments-section mrg-btm-30">
                        <!-- Main Title 2 -->
                        <div class="main-title-2">
                            <h1><span>Office </span> Reviews</h1>
                        </div>

                        <ul class="comments">
                            @foreach (var comments in Model.ClientPropertyRatings)
                            {
                                <li>
                                    <div class="comment">
                                        <div class="comment-author">
                                            <a href="#">
                                                <img src="@comments.ClientPhoto" alt="avatar-5">
                                            </a>
                                        </div>
                                        <div class="comment-content">
                                            <div class="comment-meta">
                                                <div class="comment-meta-author">
                                                    @comments.FirstName @comments.LastName
                                                </div>

                                                <div class="comment-meta-date">
                                                    <span class="hidden-xs">8:42 PM 3/3/2017</span>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="comment-body">
                                                <div class="comment-rating">
                                                    <div class="rating" data-rateyo-star-width="20px" data-rateyo-rating="@comments.Rating">
                                                    </div>
                                                </div>
                                                <p>
                                                    @comments.Review
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                </li>
                            }

                        </ul>
                    </div>
                    <!-- Comments section end -->
                    <!-- Contact form start -->
                    <div class="contact-form">
                        <form id="contact_form" action="" method="GET" enctype="multipart/form-data">
                            <div class="main-title-2">
                                <h1>Rate this Office</h1>
                                <div id="client-rating" data-rateyo-star-width="20px" data-rateyo-rating="@Model.Rating">
                                </div>
                            </div>
                            <div class="main-title-2">
                                <h1> <span>Leave</span> a Comment</h1>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group fullname">
                                        <input type="text" name="full-name" class="input-text" placeholder="Full Name">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group enter-email">
                                        <input type="email" name="email" class="input-text" placeholder="Enter email">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group message">
                                        <textarea class="input-text" name="message" placeholder="Write message"></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group send-btn">
                                        <button type="submit" class="button-md button-theme">Post Comment</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- Contact form end -->

                </div>
                <!-- Course details section end -->
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <!-- Sidebar start -->
                <div class="sidebar right">
                    <!-- Search area box start -->
                    <div class="search-area-box-6 hidden-xs hidden-sm">
                        <div class="search-contents">
                            @using (Html.BeginForm("OfficeDetails", "Home", FormMethod.Post, new { @class = "validate-big-form" }))
                            {
                                @Html.HiddenFor(m => m.PropertyName)
                                @Html.HiddenFor(m => m.Address)
                                @Html.HiddenFor(m => m.Area)
                                @Html.HiddenFor(m => m.City)
                                @Html.HiddenFor(m => m.ZipCode)
                                <div class="col-lg-12 col-pad col-pad-2">
                                    <div class="search-your-rooms">
                                        <h3 class="hidden-xs hidden-sm">Reserve Your</h3>
                                        <h2 class="hidden-xs hidden-sm" style="letter-spacing: 2px">Space<span> Now</span></h2>
                                        <h2 class="hidden-lg hidden-md">Search Your <span>Rooms</span></h2>
                                    </div>
                                </div>
                                <div class="search-your-details">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="validate-big-input" data-validate="Date is required">
                                                @Html.EditorFor(m => m.BookingEmail.FromDate, new { htmlAttributes = new { @class = "btn-default validate-big-field", id = string.Format("checkInDate"), type = "text", name = "CheckInDate", placeholder = "Check In Date" } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="validate-big-input" data-validate="Date is required">
                                                @Html.EditorFor(m => m.BookingEmail.ToDate, new { htmlAttributes = new { @class = "btn-default validate-big-field", id = string.Format("checkOutDate"), type = "text", name = "CheckOutDate", placeholder = "Check Out Date" } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="validate-big-input" data-validate="Time is required">
                                                @Html.EditorFor(m => m.BookingEmail.FromHour, new { htmlAttributes = new { @class = "btn-default validate-big-field", id = string.Format("checkInTime"), type = "text", name = "CheckInTime", placeholder = "Check In Time" } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="validate-big-input" data-validate="Time is required">
                                                @Html.EditorFor(m => m.BookingEmail.ToHour, new { htmlAttributes = new { @class = "btn-default validate-big-field", id = string.Format("checkOutTime"), type = "text", name = "CheckOutTime", placeholder = "Check Out Time" } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="validate-big-input" data-validate="Email is required">
                                                @Html.EditorFor(m => m.BookingEmail.Email, new { htmlAttributes = new { @class = "btn-default validate-big-field", id = string.Format("email"), type = "email", name = "email", placeholder = "Your Email Address" } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="validate-big-input" data-validate="Number of Person is required">
                                                @Html.DropDownListFor(m => m.BookingEmail.MaximumPerson, new List<SelectListItem>
                                                {
                                                    new SelectListItem {Text = "1", Value = "1"},
                                                    new SelectListItem {Text = "2", Value = "2"},
                                                    new SelectListItem {Text = "3", Value = "3"},
                                                    new SelectListItem {Text = "4", Value = "4"},
                                                    new SelectListItem {Text = "5", Value = "5"}
                                                }, "Number of Person", new {@class = "selectpicker search-fields form-control-2", name = "Person"})
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <button type="submit" class="search-button">Book Now</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- Search area box end -->
                    <!-- Inside video start  -->
                    <div class="inside-video sidebar-widget">
                        <div class="main-title-2">
                            <h1>Office Video</h1>
                        </div>
                        <iframe src="https://www.youtube.com/embed/azJ-WlU3UPs" allowfullscreen=""></iframe>
                    </div>
                    <!-- Inside video end -->
                    <!-- Social media start -->
                    <div class="social-media sidebar-widget clearfix">
                        <!-- Main Title 2 -->
                        <div class="main-title-2">
                            <h1>Social Media</h1>
                        </div>
                        <!-- Social list -->
                        <div class="addthis_inline_share_toolbox"></div>
                    </div>
                    <!-- Social media end -->
                    <!-- Location start  -->
                    <div class="location sidebar-widget">
                        <div class="map">
                            <!-- Main Title 2 -->
                            <div class="main-title-2">
                                <h1>Location</h1>
                            </div>

                            <iframe class="contact-map" style="height: 662px; background-color: crimson" id="gmap_canvas"
                                    src="@mapurl" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                            @*<div id="map" class="contact-map" style="height: 662px; background-color: crimson">

                                </div>*@

                        </div>
                    </div>
                    <!-- Location end -->

                </div>
                <!-- Sidebar end -->
            </div>
        </div>
    </div>
</div>
