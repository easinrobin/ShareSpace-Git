
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="clear">

</div>

<div class="contact-body content-area-6">
    <div class="container">
        <div class="contact-box">
            <!-- Main title -->
            <div class="main-title">
                <h1><span>Contact</span> with us</h1>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <!-- Address start -->
                    <div class="contact-details">
                        <div class="main-title-2">
                            <h1>Our address</h1>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="media">
                                    <div class="media-left">
                                        <i class="fa fa-map-marker"></i>
                                    </div>
                                    <div class="media-body">
                                        <h4>Office Address</h4>
                                        <p>Lorem ipsum Dolor sit amet, 658 Consectetur, Adipisicing</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="media">
                                    <div class="media-left">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                    <div class="media-body">
                                        <h4>Phone Number</h4>
                                        <p>
                                            <a href="tel:0477-0477-8556-552">office: 0477 85X6 552</a>
                                        </p>
                                        <p>
                                            <a href="tel:+55-417-634-7071">Mobile: +55 417 63X 7071</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="media mrg-btm-0">
                                    <div class="media-left">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                    <div class="media-body">
                                        <h4>Email Address</h4>
                                        <p>
                                            <a href="mailto:info@bh.com">info@bh.com</a>
                                        </p>
                                        <p>
                                            <a href="mailto:sharespace.bh@gmail.com">sharespace.bh@gmail.com</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Address end  -->
                </div>
                <div class="col-md-8 col-sm-6">
                    <!-- Google map start -->
                    <div class="section">
                        <div class="map">
                            <div id="map" class="contact-map"></div>
                        </div>
                    </div>
                    <!-- Google map end -->
                </div>
            </div>

            <hr>
            <!-- Contact form start -->
            <div class="bg-contact100">
                <div class="container-contact100">
                    <div class="wrap-contact100">
                        <div class="contact100-pic js-tilt" data-tilt>
                            <img src="/img/contact.png" alt="IMG">
                        </div>

                        <form class="contact100-form validate-form">

                            <div class="wrap-input100 validate-input" data-validate="Name is required">
                                <input class="input100" type="text" name="name" placeholder="Name">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                                <input class="input100" type="text" name="email" placeholder="Email">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                                <input class="input100" type="text" name="email" placeholder="Phone">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Message is required">
                                <textarea class="input100" name="message" placeholder="Message"></textarea>
                                <span class="focus-input100"></span>
                            </div>

                            <div class="container-contact100-form-btn">
                                <button class="contact100-form-btn">
                                    Send
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Contact form end -->
        </div>
    </div>
</div>