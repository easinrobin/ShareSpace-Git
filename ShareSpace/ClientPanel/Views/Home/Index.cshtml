
@{
    ViewBag.Title = "Home Page";
}

<div class="banner">

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="/img/banner/office1.jpg" alt="banner-slider-1">
                <div class="carousel-caption banner-slider-inner banner-top-align">
                    <div class="text-center hidden-lg hidden-md">
                        <h1 data-animation="animated fadeInDown delay-05s"><span>Welcome to</span> Alpha Hotel</h1>
                        <a href="#" class="btn button-md button-theme" data-animation="animated fadeInUp delay-05s">Get Started Now</a>
                        <a href="#" class="btn button-md border-button-theme" data-animation="animated fadeInUp delay-05s">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="/img/banner/office2.jpg" alt="banner-slider-2">
                <div class="carousel-caption banner-slider-inner banner-top-align">
                    <div class="text-right hidden-lg hidden-md">
                        <h1 data-animation="animated fadeInDown delay-05s"><span>Best Place</span> To Find Room</h1>
                        <a href="#" class="btn button-md button-theme" data-animation="animated fadeInUp delay-05s">Get Started Now</a>
                        <a href="#" class="btn button-md border-button-theme" data-animation="animated fadeInUp delay-05s">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="/img/banner/office3.jpg" alt="banner-slider-3">
                <div class="carousel-caption banner-slider-inner banner-top-align">
                    <div class="text-left hidden-lg hidden-md">
                        <h1 data-animation="animated fadeInDown delay-05s"><span>Perfect Place</span> For relax</h1>
                        <a href="#" class="btn button-md button-theme" data-animation="animated fadeInUp delay-05s">Get Started Now</a>
                        <a href="#" class="btn button-md border-button-theme" data-animation="animated fadeInUp delay-05s">Learn More</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control hidden-sm hidden-xs" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="slider-mover-left" aria-hidden="true">
                <i class="fa fa-angle-left"></i>
            </span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control hidden-sm hidden-xs" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="slider-mover-right" aria-hidden="true">
                <i class="fa fa-angle-right"></i>
            </span>
            <span class="sr-only">Next</span>
        </a>
        <!-- Controls end-->
        <!-- Search area box start -->
        <div class="home-search search-area-box-3 hidden-xs hidden-sm">
            <div class="search-contents">
                <form method="GET" action="../Home/SearchResults">
                    <div class="col-lg-12 col-pad col-pad-2">
                        <div class="search-your-rooms">
                            <h3 class="hidden-xs hidden-sm">Search</h3>
                            <h2 class="hidden-xs hidden-sm">Your <span>Rooms</span></h2>
                            <h2 class="hidden-lg hidden-md">Search Your <span>Rooms</span></h2>
                        </div>
                    </div>
                    <div class="search-your-details">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <input type="text" id="checkInDate" class="btn-default" placeholder="Check In" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group">
                            <input type="text" id="checkOutDate" class="btn-default" placeholder="Check Out" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group">
                            <input type="text" id="checkInTime" class="btn-default" placeholder="Check In Time" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group">
                            <input type="text" id="checkOutTime" class="btn-default" placeholder="Check Out Time" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group">
                            <select class="selectpicker search-fields form-control-2" name="room">
                                <option>Office Type</option>
                                <option>Shared Office</option>
                                <option>Whole Office</option>
                                <option>Meeting Space</option>
                                <option>Auditorium</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group">
                            <select class="selectpicker search-fields form-control-2" name="adults">
                                <option>Number of Person</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <button class="search-button">@Html.ActionLink("Search", "SearchResults", "Home")</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <!-- Search area box end -->
        <!-- Search area box 2 start -->
        <div class="search-area-box-2 hidden-lg hidden-md">

            <div class="search-contents">
                <form method="GET">
                    <div class="row">
                        <div class="col-md-3 col-pad col-pad-2">
                            <div class="search-your-rooms">
                                <h3 class="hidden-xs hidden-sm">Search</h3>
                                <h2 class="hidden-xs hidden-sm">Your <span>Rooms</span></h2>
                                <h2 class="hidden-lg hidden-md">Search Your <span>Rooms</span></h2>
                            </div>
                        </div>
                        <div class="search-your-details">
                            <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                <div class="form-group">
                                    <input type="text" class="btn-default" id="smallCheckInDate" placeholder="Check In Date">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                <div class="form-group">
                                    <input type="text" class="btn-default" id="smallCheckOutDate" placeholder="Check Out Date">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                <div class="form-group">
                                    <input type="text" class="btn-default" id="smallCheckInTime" placeholder="Check In Time">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                <div class="form-group">
                                    <input type="text" class="btn-default" id="smallCheckOutTime" placeholder="Check Out Time">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                <div class="form-group">
                                    <select class="selectpicker search-fields form-control-2" name="room">
                                        <option>Office Type</option>
                                        <option>Shared Office</option>
                                        <option>Whole Office</option>
                                        <option>Meeting Space</option>
                                        <option>Auditorium</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 col-pad">
                                <div class="form-group">
                                    <select class="selectpicker search-fields form-control-2" name="adults">
                                        <option>Number of Person</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12 col-pad">
                                <div class="form-group">
                                    <button class="search-button">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Search area box 2 end -->
</div>

<!-- Hotel section start -->
<div class="content-area hotel-section">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1><span>Featured </span>Properties</h1>
        </div>
        <div class="row">
            @foreach (var property in ViewBag.featuredProperties)
            {
                var propertyLink = "/Home/OfficeDetails/" + property.PropertyId;
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 wow fadeInUp delay-04s">
                    <!-- Hotel box start -->
                    <div class="hotel-box">
                        <!--header -->
                        <div class="header clearfix">
                            <img src="@property.FeatureImage" alt="img-6" class="img-responsive">
                        </div>
                        <!-- Detail -->
                        <div class="detail clearfix">
                            <div class="price">
                                ৳@property.RetailPrice<sub>/Hour</sub>
                            </div>
                            <h3>
                                <a href="@propertyLink">@property.PropertyName</a>
                            </h3>
                            <div class="rating" data-rateyo-star-width="20px" data-rateyo-rating="@property.Rating">

                            </div>
                            <p>@property.ShortDescription</p>
                            <a href="@propertyLink" class="btn button-sm button-theme">View Details</a>
                        </div>
                    </div>
                    <!-- Hotel box end -->
                </div>
            }
        </div>
    </div>
</div>
<!-- Hotel section end -->
<!-- Services section start -->

<div class="services-section content-area-5">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1><span>Top</span> Amenities</h1>
        </div>
        <div class="row">
            @foreach (var services in ViewBag.featuredService)
            {
                <div class="col-md-4 col-sm-6 col-xs-12 wow fadeInUp delay-04s">
                    <div class="services-box">
                        <i class="@services.ImagePath"></i>
                        <h3>@services.ServiceName</h3>
                        <p>@services.ShortDescription</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Services section end -->
