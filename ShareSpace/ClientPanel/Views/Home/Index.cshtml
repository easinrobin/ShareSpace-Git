@model ShareSpace.Models.Client.ClientViewModel
@{
    ViewBag.Title = "Home Page";
}
<link href="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.css" rel="stylesheet" type="text/css" />
<script src="https://code.jquery.com/jquery-2.1.4.js"></script>
<script src="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.js"></script>
<div class="banner">

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="/img/banner/office1.jpg" alt="banner-slider-1">
                <div class="carousel-caption banner-slider-inner banner-top-align">

                </div>
            </div>
            <div class="item">
                <img src="/img/banner/office2.jpg" alt="banner-slider-2">
                <div class="carousel-caption banner-slider-inner banner-top-align">

                </div>
            </div>
            <div class="item">
                <img src="/img/banner/office3.jpg" alt="banner-slider-3">
                <div class="carousel-caption banner-slider-inner banner-top-align">

                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control hidden-sm hidden-xs" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="slider-mover-left" aria-hidden="true">
                <i class="fa fa-angle-left"></i>
            </span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control hidden-sm hidden-xs" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="slider-mover-right" aria-hidden="true">
                <i class="fa fa-angle-right"></i>
            </span>
            <span class="sr-only">Next</span>
        </a>
        <!-- Controls end-->
        <!-- Search area box start -->
        @Html.Partial("~/Views/Home/Partial/_searchpanel.cshtml", Model)
       
        
    </div>
    <!-- Search area box 2 end -->
</div>

<!-- Hotel section start -->
<div class="content-area hotel-section">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1><span>Featured </span>Spaces</h1>
        </div>
        <div class="row">
           

            @foreach (var property in ViewBag.featuredProperties)
            {
                var propertyLink = "/Home/OfficeDetails/" + property.PropertyId;
                var imagepath = Request.Url.Scheme + "://" + Request.Url.Authority + property.FeatureImage;
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 wow fadeInUp delay-04s">
                    <!-- Hotel box start -->
                    <div class="hotel-box">
                        <!--header -->
                        <div class="header clearfix">
                            <img src="@imagepath" alt="img-6" class="img-responsive">
                        </div>
                        <!-- Detail -->
                        <div class="detail clearfix">
                            <div class="price">
                                ৳@property.RetailPrice.ToString("0.00")<sub>/Hour</sub>
                            </div>
                            <h3>
                                <a href="@propertyLink">@property.PropertyName</a>
                            </h3>
                            <div class="rating" data-rateyo-star-width="20px" data-rateyo-rating="@property.Rating">

                            </div>
                            <p>@property.ShortDescription</p>
                            <a href="@propertyLink" class="btn button-sm button-theme">View Details</a>
                        </div>
                    </div>
                    <!-- Hotel box end -->
                </div>
            }
        </div>
    </div>
</div>
<!-- Hotel section end -->
<!-- Services section start -->

<div class="services-section content-area-5">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1><span>Top</span> Amenities</h1>
        </div>
        <div class="row">
            @foreach (var services in ViewBag.featuredService)
            {
                <div class="col-md-4 col-sm-6 col-xs-12 wow fadeInUp delay-04s">
                    <div class="services-box">
                        <i class="@services.ImagePath"></i>
                        <h3>@services.ServiceName</h3>
                        <p>@services.ShortDescription</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Services section end -->
<script>
    $('#rangestart').calendar({
        type: 'time',
        endCalendar: $('#rangeend')
    });
    $('#rangeend').calendar({
        type: 'time',
        startCalendar: $('#rangestart')
    });

    $('#rangestartsm').calendar({
        type: 'time',
        endCalendar: $('#rangeendsm')
    });
    $('#rangeendsm').calendar({
        type: 'time',
        startCalendar: $('#rangestartsm')
    });
</script>